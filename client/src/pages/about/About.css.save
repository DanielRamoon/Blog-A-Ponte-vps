.about {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  margin-top: 30px;
  width: fit-content;
  margin-left: auto;
  margin-right: auto;
  padding: 20px;
  box-sizing: border-box;
}

.container {
  display: flex;
  justify-content: center;
  position: relative;
}

.publi-about {
  width: 100%;
  position: relative;
}
.about h1 {
  font-size: 24px;
  margin-bottom: 10px;
  margin-top: 50px;
  font-size: 24px;
  margin-bottom: 10px;
  margin-top: 50px;
  font-family: "Varela Round", sans-serif;
}

.about .about-text {
  width: 60%;
}

.about .about-text p {
  font-size: 16px;
  line-height: 1.5;
  margin-bottom: 20px;
  margin-top: 30px;
  font-family: "Varela Round", sans-serif;
  color: #3b3b3b;
}

.slidebar-about {
  position: relative;
  top: -850px;
  left: 750px;
  width: 200px;
}

@media (max-width: 767px) {
  /* Estilos para telas menores que 768px (dispositivos m√≥veis) */

  .about {
    margin-left: 0;
    margin-right: 0;
    width: 100%;
    border: none;
    margin-left: 55%;
  }

  .about h1 {
    width: 100%;
    margin-left: 75%;
    position: relative;
    top: -180px;
  }

  .about .about-text {
    width: 100%;
  }

  .slidebar-about {
    display: none;
  }

  .about .about-text p {
    font-size: 16px;
    line-height: 1.5;
    margin-bottom: 20px;
    justify-content: center;
    font-family: "Varela Round", sans-serif;
    color: #3b3b3b;
    position: relative;
    left: 4rem;
    top: -180px;
  }

  .about-text {
    width: 100%;
    margin-left: 55%;
    margin-bottom: 50px;
    text-align: center;
  }

